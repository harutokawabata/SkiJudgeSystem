<!DOCTYPE html>
<html>
  <head>
    <title>SkiJudgeSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
      	<div class="container-fluid">
      		<div class="navbar-header">
      			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample5">
      				<span class="sr-only">Toggle navigation</span>
      				<span class="icon-bar"></span>
      				<span class="icon-bar"></span>
      				<span class="icon-bar"></span>
      			</button>
      			<p class="navbar-brand">
      				<%= link_to "SkiJudgeSystem", root_path %>
      			</p>
      		</div>
      		
      		<div class="collapse navbar-collapse" id="navbarEexample5">
      			<ul class="nav navbar-nav">
      				<li><%= link_to "イベント一覧", events_path %></li>
      				<li class="active"><%= link_to "イベント申し込み（未実装）", events_path %></li>
      				<li><%= link_to "ジャッジ申し込み（未実装）", events_path %></li>
      			<% if admin_signed_in? %>
      				<li><%= link_to "イベント作成", new_admins_event_path %></li>
      				<li><%= link_to "ログアウト", destroy_admin_session_path, class: "glyphicon glyphicon-log-out", method: :delete %></li>
      			<% elsif user_signed_in? %>
      			  <li><%= link_to "ログアウト", destroy_admin_session_path, class: "glyphicon glyphicon-log-out", method: :delete %></li>
            <% else %>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            <% end %>
      			</ul>
      			<% if user_signed_in? %>
      			  <p class="navbar-text">ようこそ<%= current_user.name %>さん。</p>
      			<% else %>
      			  <p class="navbar-text">ようこそゲストさん</p>
      			<% end %>
      		</div>
      	</div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
