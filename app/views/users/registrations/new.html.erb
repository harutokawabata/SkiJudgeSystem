<div class="container text-center c-form-area">
  <div class="c-form">
    <h2 class="text-center">SJS会員登録</h2>    
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:55 %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", size:55 %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size:55 %>
      </div>
      <br>
      <div class="actions text-center">
        <%= f.submit "会員登録" %>
      </div>
    <% end %>
    
    <%= render "users/shared/links" %>
  </div>
</div>
